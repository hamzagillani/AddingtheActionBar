<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Style_One" parent="@android:style/TextAppearance.Small">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1308eb</item>
       <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentTop">true</item>

    </style>

    <style name="Style_One.Style_Two">


    <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">#07ac86</item>

</style>

    <style name="Style_Three">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#c105c7</item>

    </style>

</resources>
